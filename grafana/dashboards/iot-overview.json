{
  "uid": "iot-overview",
  "title": "IoT Pipeline Overview",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "tags": ["iot", "prometheus"],
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "Services UP",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "up", "legendFormat": "{{job}}", "datasource": { "type": "prometheus", "uid": "Prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Ingestion: Consumed / sec",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "rate(messages_consumed_total[1m])", "legendFormat": "consumed", "datasource": { "type": "prometheus", "uid": "Prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Ingestion: Invalid / sec",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "rate(messages_invalid_total[1m])", "legendFormat": "invalid", "datasource": { "type": "prometheus", "uid": "Prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Feature Extraction: Processed / sec",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "rate(features_processed_total[1m])", "legendFormat": "features", "datasource": { "type": "prometheus", "uid": "Prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Anomaly Detection: Emitted / sec",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "rate(anomalies_emitted_total[1m])", "legendFormat": "anomalies", "datasource": { "type": "prometheus", "uid": "Prometheus" } }
      ]
    },
    {
      "type": "timeseries",
      "title": "Feature Extraction: p95 processing time (s)",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 7 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(feature_processing_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Anomaly Detection: p95 processing time (s)",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 7 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(anomaly_processing_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "datasource": { "type": "prometheus", "uid": "Prometheus" }
        }
      ]
    }
  ]
}
